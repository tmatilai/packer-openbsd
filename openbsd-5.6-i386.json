{
  "variables": {
    "chef_version": "provisionerless",
    "mirror": "http://ftp.openbsd.org"
  },
  "provisioners": [
    {
      "environment_vars": [
        "CHEF_VERSION={{user `chef_version`}}",
        "MIRROR={{user `mirror`}}"
      ],
      "type": "shell",
      "scripts": [
        "scripts/postinstall.sh",
        "scripts/vagrant.sh",
        "scripts/chef.sh",
        "scripts/minimize.sh"
      ],
      "execute_command": "export {{.Vars}} && cat {{.Path}} | su -m"
    }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "S<enter><wait>",
        "echo 'System hostname = openbsd56' >>install.conf<enter>",
        "echo 'Password for root = vagrant' >>install.conf<enter>",
        "echo 'Setup a user = vagrant' >>install.conf<enter>",
        "echo 'Password for user = vagrant' >>install.conf<enter>",
        "echo 'Since you set up a user, disable sshd(8) logins to root = no' >>install.conf<enter>",
        "echo 'What timezone are you in = UTC' >>install.conf<enter>",
        "echo 'Location of sets = cd' >>install.conf<enter>",
        "echo 'Directory does not contain SHA256.sig. Continue without verification = yes' >>install.conf<enter>",
        "install -af install.conf && reboot<enter>"
      ],
      "boot_wait": "30s",
      "disk_size": 10140,
      "guest_additions_mode": "disable",
      "guest_os_type": "OpenBSD",
      "iso_checksum": "d5763699a35e4b868039b2a0f3abcb12e119588677e51cedbf011c16e5ca8dc7",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `mirror`}}/pub/OpenBSD/5.6/i386/install56.iso",
      "output_directory": "packer-openbsd-5.6-i386-virtualbox",
      "shutdown_command": "/sbin/halt -p",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "384" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "openbsd-5.6-i386"
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "S<enter><wait>",
        "echo 'System hostname = openbsd56' >>install.conf<enter>",
        "echo 'Password for root = vagrant' >>install.conf<enter>",
        "echo 'Setup a user = vagrant' >>install.conf<enter>",
        "echo 'Password for user = vagrant' >>install.conf<enter>",
        "echo 'Since you set up a user, disable sshd(8) logins to root = no' >>install.conf<enter>",
        "echo 'What timezone are you in = UTC' >>install.conf<enter>",
        "echo 'Location of sets = cd' >>install.conf<enter>",
        "echo 'Directory does not contain SHA256.sig. Continue without verification = yes' >>install.conf<enter>",
        "install -af install.conf && reboot<enter>"
      ],
      "boot_wait": "30s",
      "disk_size": 10140,
      "guest_os_type": "other",
      "iso_checksum": "d5763699a35e4b868039b2a0f3abcb12e119588677e51cedbf011c16e5ca8dc7",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `mirror`}}/pub/OpenBSD/5.6/i386/install56.iso",
      "output_directory": "packer-openbsd-5.6-i386-vmware",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "/sbin/halt -p",
      "vm_name": "openbsd-5.6-i386",
      "vmx_data": {
        "memsize": "384",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "openbsd-5.6-i386-{{.Provider}}.box",
      "vagrantfile_template": "vagrantfiles/openbsd"
    }
  ]
}
